
.page {
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
}

.m-btn {
    width: 100%;
    /* color: #fff; */
    background: #fcef37;
    border-radius: 0;
}

.m-canvas {
    flex: 1 0 0;
}

.m-wxapp-canvas {
    display: block;
    width: 100%;
    height: 100%;
}

.m-canvas__bg {
    display: block;
    width: 100%;
    height: 100%;
    background: url("https://raw.githubusercontent.com/Mrminfive/wxapp-canvas/develop/logo.png") center no-repeat;
    background-size: contain;
}
