
<view class="page">
    <button class="m-btn" bindtap="bindtap">生成图片</button>
    <wxapp-canvas class="m-canvas" class-name="m-wxapp-canvas" bindref="bindRefs">
        <wxapp-canvas-div class-name="m-canvas__bg"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__logo"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__name"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__demo m-canvas__demo-1"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__demo m-canvas__demo-2"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__demo m-canvas__demo-3"></wxapp-canvas-div>
        <wxapp-canvas-div class-name="m-canvas__qrcode" csstext="backgroundImage: url('{{qrcode}}')"></wxapp-canvas-div>
    </wxapp-canvas>
</view>
